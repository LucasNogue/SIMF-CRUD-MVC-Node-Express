<div class="container">
    <hr>
    <div class="card"> 
        <div class="card-header">
            <h2>Cadastro de médicos</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/doctors/save">
                <label for=""><b>CRM</b></label>
                <input class="form-control" type="number" name="crm" placeholder="CRM do médico"><br>
                <label for=""><b>NOME</b></label>
                <input class="form-control" type="text" name="nome" placeholder="Nome do médico"><br>
                <label for=""><b>EMAIL</b></label>
                <input class="form-control" type="email" name="email" placeholder="Email"><br>
                <label for=""><b>SENHA</b></label>
                <input class="form-control" type="password" name="senha" placeholder="Senha"><br>
                <button class="btn btn-success">Cadastrar</button>
            </form>
        </div>
    </div>
 
</div>

